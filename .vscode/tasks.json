{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "COMPILE",
            "command": "g++",
            "args": [
                "${workspaceFolder}/1942.c",
                "-o${workspaceFolder}/1942",
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-Wl,-rpath,/usr/local/lib",
                "-Wl,--enable-new-dtags",
                "-lSDL3",
                "-lSDL3_image"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: gcc"
        }
    ]
}